{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "builder": "swc",
    "deleteOutDir": true
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "packages/common",
      "entryFile": "index",
      "sourceRoot": "packages/common/src",
      "compilerOptions": {
        "tsConfigPath": "packages/common/tsconfig.json"
      }
    },
    "api": {
      "type": "application",
      "root": "packages/api",
      "entryFile": "main",
      "sourceRoot": "packages/api/src",
      "compilerOptions": {
        "tsConfigPath": "packages/api/tsconfig.json"
      }
    },
    "scripts": {
      "type": "application",
      "root": "packages/scripts",
      "entryFile": "index",
      "sourceRoot": "packages/scripts/src"
    }
  }
}