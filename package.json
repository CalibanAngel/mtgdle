{
  "name": "mtgdle",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo with NestJS API, scripts, and shared common package",
  "license": "MIT",
  "workspaces": [
    "packages/common",
    "packages/api",
    "packages/scripts"
  ],
  "scripts": {
    "build:common": "bun workspace @mtgdle/common run build",
    "build:api":    "bun workspace @mtgdle/api run build",
    "build:scripts":"bun workspace @mtgdle/scripts run build",
    "build":        "bun run build:common && bun run build:api && bun run build:scripts",
    "start:api":    "bun workspace @mtgdle/api run start",
    "start:scripts":"bun workspace @mtgdle/scripts run start",
    "start":        "bun run start:api",
    "test":         "bun workspaces run test",
    "lint":         "bun workspaces run lint",
    "format":       "bun workspaces run format",
    "prepare":      "husky install"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  }
}