{
  "name": "mtgdle",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo with NestJS API, scripts, and shared common package",
  "license": "MIT",
  "workspaces": [
    "packages/api",
    "packages/common",
    "packages/eslint-config",
    "packages/front",
    "packages/scripts"
  ],
  "scripts": {
    "build:front": "(cd packages/front && bun run build)",
    "build:common": "(cd packages/common && bun run build)",
    "build:api": "(cd packages/api && bun run build)",
    "start:front": "(cd packages/front && bun run dev)",
    "start:api": "(cd packages/api && bun run dev)"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "lodash": "^4.17.21",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "typescript": "5.8.3"
  }
}