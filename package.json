{
  "name": "mtgdle",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo with NestJS API, scripts, and shared common package",
  "license": "MIT",
  "workspaces": [
    "packages/api",
    "packages/eslint-config",
    "packages/front",
    "packages/shared-types"
  ],
  "scripts": {
    "build:api": "(cd packages/api && bun run build)",
    "build:front": "(cd packages/front && bun run build)",
    "build:shared-types": "(cd packages/shared-types && bun run build)",
    "start:api": "(cd packages/api && bun run dev)",
    "start:front": "(cd packages/front && bun run dev)",
    "start:shared-types": "(cd packages/shared-types && bun run dev)"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "lodash": "^4.17.21",
    "type-fest": "^4.41.0"
  },
  "devDependencies": {
    "typescript": "5.8.3"
  }
}