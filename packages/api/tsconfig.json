{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "@mtgdle/common": ["../common/src"],
      "@mtgdle/common/*": ["../common/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}